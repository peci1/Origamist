<?xml version="1.0" encoding="UTF-8"?>
<project name="origamist" default="default" basedir=".">
    <description>
            Origami diagram making application
    </description>

	<taskdef name="xjc" classname="com.sun.tools.xjc.XJCTask">
	  <classpath>
	  	<fileset dir="lib" includes="*.jar"/>
	  	<fileset dir="lib-compile-time" includes="*.jar" />
	  </classpath>
	</taskdef>
	
    <path id="project.classpath">
		<fileset dir="lib" includes="*.jar" />
    </path>

    <target depends="compile,jar" description="Build whole project and its documentation." name="default"/>

	<target name="init">
		<mkdir dir="bin" />
	</target>
	
