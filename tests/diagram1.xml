<m:origami xmlns:m="http://www.mff.cuni.cz/~peckam/java/origamist/diagram/v1" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://www.mff.cuni.cz/~peckam/java/origamist/diagram/v1 http://www.mff.cuni.cz/~peckam/java/origamist/schemata/diagram_v1.xsd">
  <author>
    <name>Kawasaki</name>
    <homepage>http://www.mff.cuni.cz</homepage>
  </author>
  <name>Kawasaki rose</name>
  <year>2010</year>
  <shortdesc>A very nice, but hard rose model.</shortdesc>
  <shortdesc lang="cs-CZ">Opravdu překrásná růže, ale složitá.</shortdesc>
  <description>A very nice, but hard rose model. This has nothing to do with the czech film...</description>
  <description lang="cs-CZ">Opravdu překrásná růže, ale složitá. Nemá nic společného s českým filmem...</description>
  <license>
    <name>BSD</name>
    <content>You can do whatever you want except hiding or changing the authorship information.</content>
    <permission>export</permission>
    <permission>edit</permission>
    <permission>distribute</permission>    
  </license>
  <thumbnail>
    <image type="image/jpeg"></image>
  </thumbnail>
  <paper>
    <size>
      <width>200</width>
      <height>297</height>
      <unit>mm</unit>
    </size>
    <color>
      <background>#ffff22</background>
    </color>
    <cols>3</cols>
    <rows>3</rows>
  </paper>
  <model>
    <paper>
      <size>
        <width>20</width>
        <height>30</height>
        <unit>cm</unit>
      </size>
      <colors>
        <background>#5555ff</background>
        <foreground>#ff8888</foreground>
      </colors>
      <weight>80</weight>
      <note>A common sheet of red A4 paper.</note>
      <note lang="cs-CZ">Obyčejný červený list papíru A4.</note>
    </paper>
    <steps>
      <step id="1">
        <description>Begin with a rectangle.</description>
        <description lang="cs-CZ">Začneme s obdélníkem.</description>      
      </step>
      <step id="2">
      	<description>Rotate it 45° clockwise.</description>
      	<description lang="cs-CZ">Otočte ho o 45° doprava.</description>
      	<operation type="ROTATE">
      		<angle>0.7853</angle>
      	</operation>
      </step>
      <step id="3">
      	<description>Make a valley fold parallel to the bottom of the paper.</description>
      	<description lang="cs-CZ">Rovnoběžně se spodní hranou papíru udělejte údolní přehyb.</description>
      	<operation type="VALLEY_FOLD">
      		<angle>1</angle>
      		<startPoint><x>0</x><y>0.2</y></startPoint>
      		<endPoint><x>0.666666666</x><y>0.2</y></endPoint>
      		<layer>1</layer>
      	</operation>
      </step>
      <step id="4">
      	<description>Make a mountain fold parallel to the top of the paper.</description>
      	<description lang="cs-CZ">Rovnoběžně s horní hranou papíru udělejte horní přehyb.</description>
      	<operation type="MOUNTAIN_FOLD">
      		<angle>2</angle>
      		<startPoint><x>0</x><y>0.8</y></startPoint>
      		<endPoint><x>0.666666666</x><y>0.8</y></endPoint>
      		<layer>1</layer>
      	</operation>
      </step>
      <step id="5">
      	<description>Rotate it 45° backwards.</description>
      	<description lang="cs-CZ">Otočte ho zase o 45° zpět.</description>
      	<operation type="ROTATE">
      		<angle>-0.7853</angle>
      	</operation>
      </step>
      <step id="6">
      	<description>Turn the paper over.</description>
      	<description lang="cs-CZ">Otočte papír vzhůru nohama.</description>
      	<operation type="TURN_OVER"/>
      </step>
    </steps>
  </model>
</m:origami>
